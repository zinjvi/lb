        <!--</div>-->
    <!--</div>-->
    <!--<div class="article-image">-->
    <!--<img src="{image}">-->
    <!--</div>-->
    <div class="form-group">
        <label for="title" class="col-sm-2 control-label">Кратко о статье</label>

        <div class="col-sm-10">
            <input id="notice" type="text" name="notice" class="form-control"
                   value="{notice}" placeholder="Кратко о статье..." required>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10">
            <textarea id="description" type="text" name="description"
                      class="form-control">{description}</textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label"></label>

        <div class="col-sm-10">
            <button class="save-article">Сохранить</button>
        </div>
    </div>
</form>