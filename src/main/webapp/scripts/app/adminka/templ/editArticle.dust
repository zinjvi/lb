<form class="edit-article form-horizontal" role="form">
    <input type="hidden" name="id" value="{id}">

    <div class="form-group">
        <label for="title" class="col-sm-2 control-label">Заголовок</label>

        <div class="col-sm-10">
            <input id="title" type="text" name="title" class="form-control"
                   value="{title}" placeholder="Заголовок статьи." required>
        </div>
    </div>
    <div class="form-group">
        <label for="image" class="col-sm-2 control-label">Изображение</label>

        <div class="col-sm-10">
            <input id="image" type="file" name="image" class="form-control">
        </div>
    </div>
